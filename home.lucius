:root {
  --white: #DDDDDD;
  --darkGrey: #090909;
}

body {
  background-color: var(--darkGrey);
}

#content {
  background-color: var(--white);
  width: 90%;
  margin: auto;
}

ul {
  list-style-type: none;
  display: inline;
  padding: 0.1em;
}

.uses {
  h1 {
    display: inline;
  }

  ul {
    list-style-type: none;
    display: inline;
    padding: 0.1em;
  }

  li {
    display: inline-block;
  }
}
